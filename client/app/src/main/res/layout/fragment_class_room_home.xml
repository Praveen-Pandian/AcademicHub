<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.25"
        android:weightSum="1">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/primary"
        android:id="@+id/class_room_header"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/classroom_page_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS18501"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:paddingBottom="10dp"
                />
            <TextView
                android:id="@+id/classroom_page_cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Interface Technologies"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:id="@+id/classroom_page_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE-B"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="0dp"
    android:layout_weight="0.75">
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/post_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="15dp"
    android:src="@drawable/add_icon"
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/class_post"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>
</ScrollView>
</RelativeLayout>
</LinearLayout>